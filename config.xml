<?xml version='1.0' encoding='utf-8'?>
<widget id="chat.rocket.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rocket.Chat.Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access launch-external="true" origin="tel:*" />
    <access launch-external="true" origin="geo:*" />
    <access launch-external="true" origin="mailto:*" />
    <access launch-external="true" origin="sms:*" />
    <access launch-external="true" origin="market:*" />
    <access origin="file:*" />
    <access origin="cdv:*" />
    <access origin="gap:*" />
    <access origin="http://meteor.local/*" />
    <access origin="*://localhost/*" />
    <access origin="*://10.0.2.2/*" />
    <access origin="*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon src="resources/icons/Android/mdpi.png" density="mdpi" />
        <icon src="resources/icons/Android/hdpi.png" density="hdpi" />
        <icon src="resources/icons/Android/xhdpi.png" density="xhdpi" />
        <icon src="resources/icons/Android/xxhdpi.png" density="xxhdpi" />
        <icon src="resources/icons/Android/xxxhdpi.png" density="xxxhdpi" />

        <splash src="resources/splash/android_port_ldpi.png" width="320" height="426" density="port-ldpi"/>
        <splash src="resources/splash/android_land_ldpi.png" width="426" height="320" density="land-ldpi"/>
        <splash src="resources/splash/android_port_mdpi.png" width="320" height="470" density="port-mdpi"/>
        <splash src="resources/splash/android_land_mdpi.png" width="470" height="320" density="land-mdpi"/>
        <splash src="resources/splash/android_port_hdpi.png" width="480" height="640" density="port-hdpi"/>
        <splash src="resources/splash/android_land_hdpi.png" width="640" height="480" density="land-hdpi"/>
        <splash src="resources/splash/android_port_xhdpi.png" width="720" height="960" density="port-xhdpi"/>
        <splash src="resources/splash/android_land_xhdpi.png" width="960" height="720" density="land-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <icon src="resources/icons/iOS/icon-29.png" width="29" height="29"/>
        <icon src="resources/icons/iOS/icon-40.png" width="40" height="40"/>
        <icon src="resources/icons/iOS/icon-50.png" width="50" height="50"/>
        <icon src="resources/icons/iOS/icon-57.png" width="57" height="57"/>
        <icon src="resources/icons/iOS/icon-58.png" width="58" height="58"/>
        <icon src="resources/icons/iOS/icon-60.png" width="60" height="60"/>
        <icon src="resources/icons/iOS/icon-72.png" width="72" height="72"/>
        <icon src="resources/icons/iOS/icon-76.png" width="76" height="76"/>
        <icon src="resources/icons/iOS/icon-80.png" width="80" height="80"/>
        <icon src="resources/icons/iOS/icon-100.png" width="100" height="100"/>
        <icon src="resources/icons/iOS/icon-114.png" width="114" height="114"/>
        <icon src="resources/icons/iOS/icon-120.png" width="120" height="120"/>
        <icon src="resources/icons/iOS/icon-144.png" width="144" height="144"/>
        <icon src="resources/icons/iOS/icon-152.png" width="152" height="152"/>
        <icon src="resources/icons/iOS/icon-180.png" width="180" height="180"/>

        <splash src="resources/splash/iphone.png" width="320" height="480"/>
        <splash src="resources/splash/iphone@2x.png" width="640" height="960"/>
        <splash src="resources/splash/iphone5.png" width="640" height="1136"/>
        <splash src="resources/splash/iphone6.png" width="750" height="1334"/>
        <splash src="resources/splash/iphone6p_portrait.png" width="1242" height="2208"/>
        <splash src="resources/splash/iphone6p_landscape.png" width="2208" height="1242"/>
        <splash src="resources/splash/ipad_portrait.png" width="768" height="1004"/>
        <splash src="resources/splash/ipad_portrait.png" width="768" height="1024"/>
        <splash src="resources/splash/ipad_portrait@2x.png" width="1536" height="2008"/>
        <splash src="resources/splash/ipad_portrait@2x.png" width="1536" height="2048"/>
        <splash src="resources/splash/ipad_landscape.png" width="1024" height="748"/>
        <splash src="resources/splash/ipad_landscape.png" width="1024" height="768"/>
        <splash src="resources/splash/ipad_landscape@2x.png" width="2048" height="1496"/>
        <splash src="resources/splash/ipad_landscape@2x.png" width="2048" height="1536"/>
    </platform>
    <icon src="www/icons/icon.png" />
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <hook src="hooks/beforePrepare.js" type="before_prepare" />
    <engine name="ios" spec="~3.9.2" />
    <engine name="android" spec="~4.1.1" />
    <plugin name="com.meteor.cordova-update" spec="~0.0.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~1.3.1" />
    <plugin name="cordova-plugin-file" spec="~3.0.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
    <plugin name="ionic-plugin-keyboard" spec="~1.0.7" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
